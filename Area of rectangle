#include<stdio.h>
#include<conio.h>
void main()
{
	clrscr();
	int l,b,area,perimeter;
	printf("Enter the length:");
	scanf("%d",&l);
	printf("Enter the breadth:");
	scanf("%d%",&b);
	area= (l*b);
	perimeter=(2*l)+(2*b);
	printf("The area of the rectangle=%d and the perimeter=%d",area,perimeter);
	getch();
}




